{
  "settings": {
    "isDevelop": true,
    "cleanBeforeRun": false,
    "enableGZIP": false,
    "enableUsemin": true,
    "enableRevisioning": true,
    "transformForAngular": true
  },
  "env": {
    "dev": {
      "base": "./src/",
      "dest": "./dev/"
    },
    "prod": {
      "base": "./src/",
      "dest": "./prod/"
    }
  },
  "sourceFiles": {
    "jsCritical": [
      "angular/vendor/modernizr.js"
    ],
    "js": [
      "angular/**/*.js",
      "!angular/vendor/modernizr.js"
    ],
    "scss": [
      "scss/styles.s+(a|c)ss"
    ],
    "css": [
      "angular/**/*.css"
    ],
    "html": [
      "index.html"
    ],
    "images": "img/**/*.{gif,png,jpeg,jpg,svg}",
    "tests": {
      "e2e": [
        "tests/e2e/**/*.js"
      ],
      "unit": [
        "tests/unit/**/*.js"
      ]
    },
    "zip" : ["./prod/**/*","!./prod/tests/"]
    },
  "targetFolders": {
    "js": "angular/",
    "css": "angular/",
    "html": "/",
    "images": "img/",
    "maps": "./",
    "revManifest": "./src/",
    "zip" : "./zip/"
  },
  "targetFiles": {
    "js": "app.js",
    "css": "styles.css",
    "revManifest": "rev-manifest.json",
    "zip" : null
  },
  "watchFiles": {
    "scss": "scss/**/*.s+(a|c)ss",
    "css": "angular/*.css",
    "js": "angular/**/*.js",
    "html": "*.{html,htm,xml,txt}",
    "images": "img/**/*.{gif,png,jpeg,jpg,svg}"
  },
  "plugins": {
    "scssLint": {
      "config": "./config/lint-scss.yml"
    },
    "autoprefixer": {
      "browsers": ["ie 8-10", "Last 2 Chrome versions"]
    },
    "minifyCSS": {
      "compatibility": "ie8"
    },
    "minifyHTML": {
      "collapseWhitespace": true,
      "removeComments": true,
      "minifyCSS": true
    },
    "gzipOptions": {
      "append": false,
      "extension": "gz",
      "threshold": "1kb",
      "level": 9
    },
    "browserSync": {
      "proxy": "localhost/cordys/nl-mindef-bop/apitest/portal.html",
      "browsers": [
        "chrome"
      ]
    },
    "karma": {
      "configFile": "/src/tests/unit.karma.conf.js"
    },
    "protractor": {
      "configFile": "/src/tests/e2e.protractor.conf.js"
    },
    "jshintOptions": {
      "node": true,
      "globals": {
        "app": false,
        "angular": false,
        "$": false,
        "_": false,
        "moment": false,
        "window": false
      }
    },
    "revOptions" : {
    }
  }
}
