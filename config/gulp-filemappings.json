{
  "env": {
    "dev": {
      "base": "./src/",
      "dest": "./develop/"
    },
    "prod": {
      "base": "./src/",
      "dest": "./production/"
    }
  },
  "sourceFiles": {
    "jsCritical": [
      "scripts/vendor/modernizr.js"
    ],
    "js": [
      "scripts/**/*.js",
      "!scripts/vendor/modernizr.js"
    ],
    "scss": [
      "scss/styles.s+(a|c)ss"
    ],
    "css": [
      "styles/**/*.css"
    ],
    "html": [
      "index.html"
    ],
    "images": "img/**/*.{gif,png,jpeg,jpg,svg}",
    "tests": {
      "e2e": [
        "tests/e2e/**/*.js"
      ],
      "unit": [
        "tests/unit/**/*.js"
      ]
    },
    "zip": ["./production/**/*", "!./production/tests/"]
  },
  "targetFolders": {
    "js": "scripts/",
    "css": "styles/",
    "html": "/",
    "images": "img/",
    "maps": "./",
    "revManifest": "./src/",
    "zip": "./zip/"
  },
  "targetFiles": {
    "js": "app.js",
    "css": "styles.css",
    "revManifest": "rev-manifest.json",
    "zip": null
  },
  "watchFiles": {
    "scss": "scss/**/*.s+(a|c)ss",
    "css": "styles/*.css",
    "js": "scripts/**/*.js",
    "html": "*.{html,htm,xml,txt}",
    "images": "img/**/*.{gif,png,jpeg,jpg,svg}"
  }
}
